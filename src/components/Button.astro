---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-lg px-6 p-2 font-semibold transition transform hover:-translate-y-1 uppercase";

const variantClasses = {
  primary: "bg-green-600 hover:bg-green-700 text-white",
  secondary: "border-2 border-green-600 hover:border-green-700 text-green-600 hover:text-red-700",
};

const sizeClasses = {
  large: "text-2xl",
  medium: "text-lg",
  small: "text-base",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
