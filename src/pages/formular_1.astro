---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
---

<MainLayout title="Formular">
   <h1 class="pt-32 whitespace-pre-line col-span-2">
  Registrer din 
  digitale
oprydning</h1>
<section class="md:grid grid-cols-5 grid-rows-2">
  <form class="pt-32 pb-20 col-start-2 col-span-3 row-start-1">
    <div class="max-w-xl mx-auto grid gap-5 grid-cols-2">
      <div class="pb-6">
        <label class="text-lg pr-5" for="antal">Antal af deltager</label>
        <input class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" type="number" id="antal" placeholder="1" />
      </div>
      <div class="pb-6">
        <label class="text-lg pr-5" for="gb">DATA slettet (GB)</label>
        <input class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" type="number" id="gb" placeholder="0" />
      </div>
    </div>
  </form>
      <div class="pt-10 pb-6 max-w-xl mx-auto text-center col-start-3 row-start-2">
      <!--<a href="/formular_2">
          <Button variant="primary" size="small">Fortsæt</Button>
        </a>-->
      <div class="pb-6 max-w-xl mx-auto">
        <Link href="/formular_2" target="_blank" variant="primary" size="small">Fortsæt</Link>
      </div>
    </div>
   <div class="col-start-5 row-start-2 content-center">
      <div class="text-center">
        <div class="flex justify-center pb-4">
          <img src="/question_mark.svg" alt="Spørgsmålstegn icorn" />
        </div>
        <div class="flex justify-center">
          <Link href="/how_to" target="_blank" variant="textlink" size="standard">Sådan deltager du</Link>
        </div>
      </div>
    </div>
</section>
</MainLayout>
